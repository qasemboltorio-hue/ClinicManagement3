<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinicmanagement3.ReceptionistAppointmentDetailsController"
            prefWidth="600" prefHeight="400">

    <Pane prefHeight="60" prefWidth="600" style="-fx-background-color: #1E4D6B;">
        <Label text="MediCore" layoutX="20" layoutY="18"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Button fx:id="signOutButton" text="Sign Out"
                layoutX="490" layoutY="15" prefWidth="90"
                style="-fx-background-radius: 15; -fx-background-color: white; -fx-font-weight: bold;"/>
    </Pane>

    <VBox layoutX="30" layoutY="80" spacing="10">
        <Label fx:id="patientLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="contactLabel"/>
        <Label fx:id="appointmentLabel"/>
        <Label fx:id="reasonLabel"/>
        <Label fx:id="doctorLabel"/>
        <Label fx:id="statusLabel"/>
    </VBox>

    <HBox layoutX="30" layoutY="300" spacing="10">
        <Button fx:id="backButton" text="Back"
                style="-fx-background-color: #1E4D6B; -fx-text-fill: white;"
                onAction="#handleBack"/>
        <Button fx:id="rescheduleButton" text="Reschedule"
                style="-fx-background-color: #1E4D6B; -fx-text-fill: white;"
                onAction="#handleReschedule"/>
        <Button fx:id="cancelButton" text="Cancel"
                style="-fx-background-color: #D9534F; -fx-text-fill: white;"
                onAction="#handleCancel"/>
        <Button fx:id="markCompleteButton" text="Mark Complete"
                style="-fx-background-color: #5CB85C; -fx-text-fill: white;"
                onAction="#handleMarkComplete"/>
    </HBox>

</AnchorPane>
