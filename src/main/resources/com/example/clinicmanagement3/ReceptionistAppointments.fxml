<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinicmanagement3.ReceptionistAppointmentsController"
            prefWidth="900" prefHeight="600">

    <!-- HEADER BAR -->
    <Pane layoutX="0" layoutY="0" prefWidth="900" prefHeight="60"
          style="-fx-background-color: #1E4D6B;">
        <Label text="MediCore"
               layoutX="20" layoutY="18"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
        <Button fx:id="signOutButton" text="Sign Out"
                layoutX="780" layoutY="15" prefWidth="90"
                style="-fx-background-radius: 15; -fx-background-color: white; -fx-font-weight: bold;"
                onAction="#handleSignOut"/>
    </Pane>

    <!-- TABLE SECTION -->
    <VBox layoutX="20" layoutY="80" spacing="10" prefWidth="860">
        <Label text="APPOINTMENTS" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="appointmentsTable" prefHeight="300" prefWidth="860">
            <columns>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="150"/>
                <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150"/>
                <TableColumn fx:id="reasonColumn" text="Reason" prefWidth="150"/>
                <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="200"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>

    <!-- ADD APPOINTMENT FORM -->
    <VBox layoutX="20" layoutY="400" spacing="10" prefWidth="860" prefHeight="150"
          style="-fx-background-color: #E5F0FB; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Add Appointment" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <GridPane hgap="20" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="250"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="30"/>
            </rowConstraints>

            <Label text="Patient Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="patientNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

            <Label text="Date &amp; Time:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="dateTimeField" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="200"/>

            <Label text="Contact#:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="contactField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

            <Label text="Reason:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="reasonField" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="200"/>

            <Button fx:id="addButton" text="Add"
                    GridPane.rowIndex="2" GridPane.columnIndex="3"
                    prefWidth="80"
                    style="-fx-background-color: #1E4D6B; -fx-text-fill: white; -fx-font-weight: bold;"
                    onAction="#handleAddAppointment"/>
        </GridPane>
    </VBox>

    <!-- BACK BUTTON -->
    <Button fx:id="backButton" text="Back"
            layoutX="20" layoutY="560" prefWidth="100"
            style="-fx-background-color: #1E4D6B; -fx-text-fill: white; -fx-font-weight: bold;"
            onAction="#handleBack"/>

</AnchorPane>
