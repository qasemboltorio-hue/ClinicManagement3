<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinicmanagement3.ReceptionistLabResultsController"
            style="-fx-background-color: #ffffff;">

    <children>
        <!-- ===== Top Blue Header ===== -->
        <Pane prefHeight="61.0" prefWidth="1280.0" style="-fx-background-color: #184E74;">
            <children>
                <Label layoutX="37.0" layoutY="15.0" text="MediCore" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="30.0"/>
                    </font>
                </Label>

                <!-- Sign Out -->
                <Button fx:id="signOutButton"
                        layoutX="1140.0" layoutY="10.0"
                        mnemonicParsing="false" onAction="#handleSignOut"
                        prefHeight="42.0" prefWidth="120.0"
                        text="Sign Out"
                        style="-fx-background-color: white;
                               -fx-text-fill: #184E74;
                               -fx-background-radius: 25;
                               -fx-border-radius: 25;
                               -fx-border-color: #ffffff;
                               -fx-font-weight: bold;
                               -fx-cursor: hand;"/>
            </children>
        </Pane>

        <!-- ===== Title ===== -->
        <Label layoutX="60.0" layoutY="90.0" text="LABORATORY RESULTS"
               style="-fx-font-weight: bold; -fx-font-size: 26px;"/>

        <!-- ===== Search Bar ===== -->
        <Label layoutX="60.0" layoutY="140.0" text="Search" style="-fx-font-weight: bold;"/>
        <TextField fx:id="searchField"
                   layoutX="120.0" layoutY="135.0"
                   prefWidth="350.0"
                   promptText="Search by Patient Name"/>

        <!-- ===== Table ===== -->
        <TableView fx:id="labResultsTable" layoutX="60.0" layoutY="180.0"
                   prefWidth="1160.0" prefHeight="400.0">
            <columns>
                <TableColumn fx:id="colService" text="Laboratory Service" prefWidth="200.0"/>
                <TableColumn fx:id="colRequestedBy" text="Requested By" prefWidth="150.0"/>
                <TableColumn fx:id="colPatientName" text="Patient Name" prefWidth="150.0"/>
                <TableColumn fx:id="colDateRequest" text="Date of Request" prefWidth="150.0"/>
                <TableColumn fx:id="colDateRelease" text="Date of Release" prefWidth="150.0"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="150.0"/>
            </columns>
        </TableView>

        <!-- ===== Back Button ===== -->
        <Button fx:id="backButton"
                layoutX="60.0" layoutY="620.0"
                prefWidth="100.0" prefHeight="40.0"
                text="Back" onAction="#handleBack"
                style="-fx-background-color: #184E74;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 25;
                       -fx-cursor: hand;"/>
    </children>
</AnchorPane>
