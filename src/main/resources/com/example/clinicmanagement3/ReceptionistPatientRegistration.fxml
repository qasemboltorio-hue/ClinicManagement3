<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.clinicmanagement3.ReceptionistPatientRegistrationController"
            prefHeight="720.0" prefWidth="1280.0"
            style="-fx-background-color: #ffffff;">

    <children>
        <!-- ======== Top Blue Header ======== -->
        <Pane prefHeight="61.0" prefWidth="1280.0" style="-fx-background-color: #184E74;">
            <children>
                <Label layoutX="37.0" layoutY="15.0" text="MediCore" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="30.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <!-- ======== Title ======== -->
        <Label layoutX="74.0" layoutY="120.0" text="PATIENT REGISTRATION"
               style="-fx-text-fill: #000000;">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>

        <!-- ======== Buttons ======== -->
        <Button fx:id="addNewPatientButton"
                layoutX="300.0" layoutY="220.0"
                prefWidth="250.0" prefHeight="80.0"
                text="Add New Patient"
                onAction="#handleAddNewPatient"
                style="-fx-background-color: #d9d9d9; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Button>

        <Button fx:id="viewExistingRegistrationsButton"
                layoutX="680.0" layoutY="220.0"
                prefWidth="250.0" prefHeight="80.0"
                text="View Existing Registrations"
                onAction="#handleViewExistingRegistrations"
                style="-fx-background-color: #d9d9d9; -fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Button>

        <!-- ======== Back Button ======== -->
        <Button fx:id="backButton"
                layoutX="74.0" layoutY="640.0"
                prefWidth="80.0" prefHeight="35.0"
                text="Back"
                onAction="#handleBack"
                style="-fx-background-color: #184E74; -fx-text-fill: white; -fx-background-radius: 20;">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
